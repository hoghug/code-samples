<script src="{{ 'section-comparison-builder.js' | asset_url }}" defer="defer"></script>


{% stylesheet %}
/* ADD dropdown arrows */
.comparison-builder__inputs select {
  display: block;
  width: 100%;
  appearance: none;
  outline: none;
  cursor: pointer;
  color: #8e1e4d;
  background-color: #fffbf0;
  border: 2px solid #8e1e4d;
  border-radius: 5px;
  padding: 10px;
  position: relative;
  font-weight: 600;
  background-image:
    linear-gradient(45deg, transparent 50%, #8e1e4d 50%),
    linear-gradient(135deg, #8e1e4d 50%, transparent 50%),
    linear-gradient(to right, #eaddca, #eaddca);
  background-position: calc(100% - 20px) calc(1em + 2px), calc(100% - 15px) calc(1em + 2px), 100% 0;
  background-size: 5px 5px, 5px 5px, 3em 3em;
  background-repeat: no-repeat;
}
.comparison-builder__inputs select#brand-list-2 {
  color: #ec713c;
  border-color: #ec713c;
  background-image:
    linear-gradient(45deg, transparent 50%, #ec713c 50%),
    linear-gradient(135deg, #ec713c 50%, transparent 50%),
    linear-gradient(to right, #eaddca, #eaddca);
}
.comparison-builder__inputs {
  display: grid;
  grid-template-columns: 1fr 1fr;
  grid-gap: 20px;
}
.comparison-builder__inputs span {
  display: block;
  color: #858695;
  font-size: 0.8em;
}

.comparison-builder__choices {
  margin: 30px 0;
  display: grid;
  grid-template-columns: 2fr 1fr 2fr;
  grid-template-areas: "choice1 vs choice2";
}

.comparison-builder__choice#vs {
  grid-area: vs;
  text-align: center;
  padding-top: 20px; 
}
.comparison-builder__choice#vs img {
  max-width: 60px;
}
.comparison-builder__choice#choice-1 {
  grid-area: choice1;
}
.comparison-builder__choice#choice-2 {
  grid-area: choice2;
}
.comparison-builder__choice__logo {
  text-align: center;
  width: 100%;
  height: 100px;
  max-width: 200px;
  margin: 0 auto;
  background-size: contain;
  background-position: 50% 50%;
  background-repeat: no-repeat;
}
.comparison-builder__choices accordion-content .content {
    display: -webkit-box;
    line-height: 1.2em;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
}
.comparison-builder__button-wrapper {
  display: none;
  margin-top: 30px;
}
comparison-builder.has-article .comparison-builder__button-wrapper {
  display: block;
  text-align: center;
}

@media screen and (max-width: 749px) {
