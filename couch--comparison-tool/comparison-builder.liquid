{% endstylesheet %}

{%- style -%}
  .generate-button {
    background-color: {{ section.settings.btn_bg_color }};
    color: {{ section.settings.btn_text_color }};    
  }

  .generate-button:hover {
    background-color: {{ section.settings.btn_bg_color_hover }} !important;
    color: {{ section.settings.btn_text_color_hover }} !important;
  }

  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="page-width {% if section.settings.narrow %}page-width--narrow{% endif %} section-{{ section.id }}-padding">
  {% if section.settings.heading != blank %}
    <div class="h2">
      {{ section.settings.heading }}
    </div>    
  {% endif %}
  {% if section.settings.description != blank %}
    <p class="">
      {{ section.settings.description }}
    </p>    
  {% endif %}

  <comparison-builder>
    <div class="comparison-builder__inputs">

      <div>
        <span>Brand 1</span>
        <select class="custom-select" id="brand-list-1">
          {% paginate shop.metaobjects['brand'].values by 200 %}
              {% comment %} <option selected disabled>Select Brand 1</option> {% endcomment %}
            {% for brand in shop.metaobjects['brand'].values %}
              <option value="{{ brand.name.value }}" {% if brand.name.value == section.settings.preset_brand_1 %}selected{% endif %} data-logo="{{ brand.logo_image.value |  image_url: width: 300 }}" data-description="{{ brand.description | metafield_text }}">{{ brand.name.value }}</option>
            {% endfor %}
          {% endpaginate %}
        </select>
      </div>

      <div>
        <span>Brand 2</span>
        <select class="custom-select" id="brand-list-2">
          {% comment %} <option selected disabled>Select Brand 2</option> {% endcomment %}
          {% paginate shop.metaobjects['brand'].values by 200 %}
            {% for brand in shop.metaobjects['brand'].values %}
              <option value="{{ brand.name.value }}" {% if brand.name.value == section.settings.preset_brand_2 %}selected{% endif %} data-logo="{{ brand.logo_image.value |  image_url: width: 300 }}" data-description="{{ brand.description | metafield_text }}">{{ brand.name.value }}</option>
            {% endfor %}
          {% endpaginate %}
        </select>
      </div>
    </div>

    {% if section.settings.button_position == 'top' or section.settings.button_position == 'both' %}
      <div class="comparison-builder__button-wrapper">
        <a href="#" class="button button--full-width generate-button button--full-width-mobile-only">{{ section.settings.btn_text }}</a>
      </div>
    {% endif %}

    <div class="comparison-builder__choices hidden">
      <div class="comparison-builder__choice" id="vs"><img src="https://cdn.shopify.com/s/files/1/0695/0689/1811/files/vs.png?v=1741712891"></div>
    </div>

    {% if section.settings.button_position == 'bottom' or section.settings.button_position == 'both' %}
      <div class="comparison-builder__button-wrapper">
        <a href="#" class="button button--full-width generate-button button--full-width-mobile-only">{{ section.settings.btn_text }}</a>
      </div>
    {% endif %}
  </comparison-builder>

</div>
  
{% schema %}
{
  "name": "Comparison Builder",
  "tag": "section",
  "class": "section",
  "presets": [
    {
      "name": "Comparison Builder"
    }
  ],
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description"
    },
    {
      "type": "checkbox",
      "id": "narrow",
      "label": "Narrow Layout",
      "default": true
    },
    {
      "type": "header",
      "content": "Presets"
    },
    {
      "type": "text",
      "id": "preset_brand_1",
      "label": "Brand 1",
      "default": "Crate & Barrel"
    },
    {
      "type": "text",
      "id": "preset_brand_2",
      "label": "Brand 2",
      "default": "West Elm"
    },
    {
      "type": "header",
      "content": "Button Basics"
    },
    {
      "type": "text",
      "id": "btn_text",
      "label": "Button Text",
      "default": "Generate"
    },
    {
      "type": "select",
      "id": "button_position",
      "label": "Button Position",
      "default": "bottom",
      "options": [
        {
          "value": "top",
          "label": "Top"
        },
        {
          "value": "both",
          "label": "Both"
        },
        {
          "value": "bottom",
          "label": "Bottom"
        }
      ]
    },
    {
      "type": "header",
      "content": "Button Styles"
    },
    {
      "type": "color",
      "id": "btn_bg_color",
      "label": "Button Background Color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "btn_text_color",
      "label": "Button Text Color",
      "default": "#ffffff"
    },
    {
      "type": "header",
      "content": "Button Styles :: Hover"
    },
    {
      "type": "color",
      "id": "btn_bg_color_hover",
      "label": "Button Background Color on Hover",
      "default": "#333333"
    },
    {
      "type": "color",
      "id": "btn_text_color_hover",
      "label": "Button Text Color on Hover",
      "default": "#ffffff"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ]
}
{% endschema %}
